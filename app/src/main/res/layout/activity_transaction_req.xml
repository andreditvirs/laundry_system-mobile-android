<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionActivityReq"
    android:orientation="vertical"
    android:background="@color/color_2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="@drawable/bg_header"
        android:layout_marginBottom="30dp">
        <ImageView
            android:id="@+id/imgV_transaction_icon"
            android:layout_width="match_parent"
            android:layout_height="264dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/cuci_basah"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtV_greeting_transaction"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Hai, Andre"
        android:textColor="@color/color_3"
        android:textSize="20sp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/txtV_description"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Permintaan Layanan Cuci Basah\nsedang dalam konfirmasi\nToko ini..."
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginVertical="16dp"/>
    <Button
        android:id="@+id/btn_oke"
        style="@style/Button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="30dp"
        android:text="@string/button_wait" />
</LinearLayout>