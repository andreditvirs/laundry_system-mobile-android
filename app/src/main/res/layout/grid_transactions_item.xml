<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgV_grid_transaction_item_journal"
                android:layout_width="fill_parent"
                android:layout_weight="2"
                android:layout_height="140dp"
                android:src="@drawable/example_shop_1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtV_grid_transaction_item_service_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cuci Basah"
                    android:fontFamily="sans-serif"
                    android:textFontWeight="500"
                    android:textSize="20dp"
                    android:textColor="@color/color_1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:id="@+id/txtV_grid_transaction_item_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tokonya"
                    android:fontFamily="sans-serif"
                    android:textFontWeight="300"
                    android:textSize="14dp"
                    android:textColor="@color/color_3"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:id="@+id/txtV_grid_transaction_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp. -"
                    android:fontFamily="sans-serif"
                    android:textFontWeight="300"
                    android:textSize="14dp"
                    android:textColor="@color/color_2"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:id="@+id/txtV_grid_transaction_item_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- Kg"
                    android:fontFamily="sans-serif"
                    android:textFontWeight="300"
                    android:textSize="14dp"
                    android:textColor="@color/color_2"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:id="@+id/txtV_grid_transaction_item_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:fontFamily="sans-serif"
                    android:textFontWeight="300"
                    android:textSize="14dp"
                    android:textColor="@color/color_2"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>