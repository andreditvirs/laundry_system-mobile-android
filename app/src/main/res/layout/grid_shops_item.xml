<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgV_grid_journal_item_journal"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/example_shop_1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/txtV_grid_journal_item_title"
                android:layout_below="@id/imgV_grid_journal_item_journal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cerita xxxx"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"
                android:textSize="20dp"
                android:textColor="@color/color_2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/txtV_open_close_time"
                android:layout_below="@id/txtV_grid_journal_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cerita xxxx"
                android:fontFamily="sans-serif"
                android:textFontWeight="300"
                android:textSize="14dp"
                android:textColor="@color/color_1"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>